
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("Gravar", "Categoria", FormMethod.Post))
{
    <input type="hidden" name="cod" value="@ViewBag.cod" />
    <div class="panel panel-default">
        <div class="panel-heading">
            Categorias Cadastradas
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Nome da Categoria</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.LstCategoria)
                        {

                            <tr class="odd gradeX">
                                <td>@item.nome_categoria</td>
                                <td><a href="/Categoria/Alterar?cod=@item.id_categoria&nome=@item.nome_categoria" class="btn btn-warning">Alterar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>


    </div>
}