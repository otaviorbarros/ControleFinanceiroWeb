
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("Gravar", "Conta", FormMethod.Post))
{
    <input type="hidden" name="cod" value="@ViewBag.cod" />
    <div class="panel panel-default">
        <div class="panel-heading">
            Contas Cadastradas
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Nome do Banco</th>
                            <th>Agência</th>
                            <th>Número</th>
                            <th>Saldo</th>
                            <th>Tipo de Conta</th>
                            <th>Ação</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.lstConta)
                        {

                            <tr class="odd gradeX">
                                <td>@item.ag_conta</td>
                                <td>@item.banco_conta</td>
                                <td>@item.num_conta</td>
                                <td>@item.saldo_conta</td>
                                <td>@item.tipo_conta</td>
                                <td><a href="/Conta/Alterar?cod=@item.id_conta&nome=@item.banco_conta&ag=@item.ag_conta&num_conta=@item.num_conta&saldo=@item.saldo_conta&tipo=@item.tipo_conta" class="btn btn-warning">Alterar</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>

        


    </div>
}

